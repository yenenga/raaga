<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:contentPadding="-2dp">

    <!--app:cardUseCompatPadding="true"-->
    <!--app:cardPreventCornerOverlap="true"-->
    <!--android:background="@mak.bf.myapplication.raaga.activite.drawable/card_bg"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/header_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/user_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                app:corner_radius="25dp" />

            <!--android:background="@mak.bf.myapplication.raaga.activite.drawable/shape_google_avatar"-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/user_iv"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/display_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/timestamp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray15"
                    android:textSize="12sp" />
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/post_iv"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@color/gray9"
            android:contentDescription=""
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/plus_one_tv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@mak.bf.myapplication.raaga.activite.drawable/shape_rounded_rectangle"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/gray15"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@id/plus_one_tv"
                android:background="@mak.bf.myapplication.raaga.activite.drawable/shape_rounded_rectangle"
                android:contentDescription=""
                android:gravity="center"
                android:padding="4dp"
                android:src="@mak.bf.myapplication.raaga.activite.drawable/ic_action_share" />

            <TextView
                android:id="@+id/add_comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="3dp"
                android:background="@mak.bf.myapplication.raaga.activite.drawable/shape_rounded_rectangle"
                android:drawableLeft="@mak.bf.myapplication.raaga.activite.drawable/ic_action_google_plus_comment"
                android:drawablePadding="-2dp"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="12dp"
                android:textColor="@color/gray15"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/add_comment_tv">

                <LinearLayout
                    android:id="@+id/commenter_avatars_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/commenter_one_iv"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:background="@mak.bf.myapplication.raaga.activite.drawable/shape_rounded_rectangle"
                        app:corner_radius="2dp" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/commenter_two_iv"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="@mak.bf.myapplication.raaga.activite.drawable/shape_rounded_rectangle"
                        app:corner_radius="2dp" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/commenter_three_iv"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:background="@mak.bf.myapplication.raaga.activite.drawable/shape_rounded_rectangle"
                        app:corner_radius="2dp" />

                </LinearLayout>

                <View
                    android:id="@+id/indicator_v"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_below="@id/commenter_avatars_ll"
                    android:layout_margin="1dp"
                    android:background="@color/bulgarian_blue" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@mak.bf.myapplication.raaga.activite.drawable/shape_whitesmoke_semi_rounded_rectangle"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

    

