<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/google_plus_bg">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" />

    <com.etiennelawlor.quickreturn.views.CustomFontTextView
        android:id="@+id/quick_return_footer_tv"
        android:layout_width="wrap_content"
        android:padding="14dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mak.bf.myapplication.raaga.activite.drawable/shape_rounded_rectangle_transparent_black"
        android:textSize="14sp"
        android:text="@string/new_posts"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="29dp"
        android:gravity="center"
        app:textFont="Roboto_Regular"/>

    <ImageView
        android:id="@+id/quick_return_footer_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mak.bf.myapplication.raaga.activite.drawable/ic_action_edit_red"
        android:background="@mak.bf.myapplication.raaga.activite.drawable/shape_circle_white_dropshadow"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:padding="12dp"
        android:contentDescription=""
        android:layout_alignParentRight="true"
        />

</RelativeLayout>

